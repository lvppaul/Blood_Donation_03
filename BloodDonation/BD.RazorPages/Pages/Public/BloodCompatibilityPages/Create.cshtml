@page
@model BD.RazorPages.Pages.Public.BloodCompatibilityPages.CreateModel

@{
    ViewData["Title"] = "Create Blood Compatibility";
}

<h1>Create Blood Compatibility</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Recipient Blood Type -->
            <div class="form-group">
                <label asp-for="BloodCompatibility.RecipientBloodType" class="control-label"> Recipient Blood Type </label>
                <select asp-for="BloodCompatibility.RecipientBloodType" class="form-control">
                    <option value="">-- Select Recipient Blood Type --</option>
                    <option>A+</option>
                    <option>A-</option>
                    <option>B+</option>
                    <option>B-</option>
                    <option>AB+</option>
                    <option>AB-</option>
                    <option>O+</option>
                    <option>O-</option>
                </select>
                <span asp-validation-for="BloodCompatibility.RecipientBloodType" class="text-danger"></span>
            </div>

            <!-- Donor Blood Type -->
            <div class="form-group">
                <label asp-for="BloodCompatibility.DonorBloodType" class="control-label">Donor Blood Type</label>
                <select asp-for="BloodCompatibility.DonorBloodType" class="form-control">
                    <option value="">-- Select Donor Blood Type --</option>
                    <option>A+</option>
                    <option>A-</option>
                    <option>B+</option>
                    <option>B-</option>
                    <option>AB+</option>
                    <option>AB-</option>
                    <option>O+</option>
                    <option>O-</option>
                </select>
                <span asp-validation-for="BloodCompatibility.DonorBloodType" class="text-danger"></span>
            </div>

            <!-- Component Type -->
            <div class="form-group">
                <label asp-for="BloodCompatibility.ComponentType" class="control-label">Component Type</label>
                <select asp-for="BloodCompatibility.ComponentType" class="form-control">
                    <option value="">-- Select Component Type --</option>
                    <option>Red Blood Cells</option>
                    <option>Plasma</option>
                    <option>Platelets</option>
                    <option>White Blood Cells</option>
                </select>
                <span asp-validation-for="BloodCompatibility.ComponentType" class="text-danger"></span>
            </div>

            <!-- Is Compatible -->
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="BloodCompatibility.IsCompatible" />
                <label class="form-check-label" asp-for="BloodCompatibility.IsCompatible"></label>
            </div>

            <!-- Submit -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary ml-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
