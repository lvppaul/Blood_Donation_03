@page
@model BD.RazorPages.Pages.Public.BloodCompatibilityPages.IndexModel

@{
    ViewData["Title"] = "Blood Compatibility Search";
}

<h1 class="mb-4">Blood Compatibility Search</h1>

<form method="get" class="mb-3">
    <div class="form-group">
        <label for="filter">Filter by Compatibility:</label>
        <select id="filter" name="filter" class="form-control w-auto d-inline-block mx-2">
            <option value="">-- All --</option>
            <option value="Red Blood Cells" selected="@("Red Blood Cells" == Model.Filter)">RBC</option>
            <option value="Plasma" selected="@("Plasma" == Model.Filter)">Plasma</option>
            <option value="Platelets" selected="@("Platelets" == Model.Filter)">Platelets</option>
            <option value="White Blood Cells" selected="@("White Blood Cells" == Model.Filter)">WBC</option>
        </select>
        <button type="submit" class="btn btn-primary">Apply Filter</button>
    </div>
</form>

<p>
    <a class="btn btn-success" asp-page="Create">+ Add New Compatibility</a>
</p>

<table class="table table-bordered table-striped mt-3">
    <thead class="table-dark">
        <tr>
            <th>Recipient Blood Type</th>
            <th>Donor Blood Type</th>
            <th>Component Type</th>
            <th>Compatible</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.BloodCompatibility != null && Model.BloodCompatibility.Any())
        {
            foreach (var item in Model.BloodCompatibility)
            {
                <tr>
                    <td>@item.RecipientBloodType</td>
                    <td>@item.DonorBloodType</td>
                    <td>@item.ComponentType</td>
                    <td>@(item.IsCompatible ? "✔️ Yes" : "❌ No")</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-page="./Edit" asp-route-id="@item.CompatibilityId">Edit</a>
                        <a class="btn btn-sm btn-info" asp-page="./Details" asp-route-id="@item.CompatibilityId">Details</a>
                        <a class="btn btn-sm btn-danger" asp-page="./Delete" asp-route-id="@item.CompatibilityId">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No blood compatibility data found.</td>
            </tr>
        }
    </tbody>
</table>
