@page "/admin/blog/edit/{id:int}"
@model BD.RazorPages.Pages.Admin.Blog.EditModel
@{
    ViewData["Title"] = "Edit Blog Post";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admin/blog">Blog Management</a></li>
                        <li class="breadcrumb-item active">Edit Blog Post</li>
                    </ol>
                </div>
                <h4 class="page-title">Edit Blog Post</h4>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="PostId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="BlogPost.Title" class="form-label">Title <span class="text-danger">*</span></label>
                            <input asp-for="BlogPost.Title" class="form-control" placeholder="Enter blog post title" />
                            <span asp-validation-for="BlogPost.Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BlogPost.Category" class="form-label">Category <span class="text-danger">*</span></label>
                            <select asp-for="BlogPost.Category" class="form-select">
                                <option value="">Select a category</option>
                                <option value="Health & Wellness">Health & Wellness</option>
                                <option value="Blood Donation Tips">Blood Donation Tips</option>
                                <option value="Success Stories">Success Stories</option>
                                <option value="Events & Campaigns">Events & Campaigns</option>
                                <option value="Medical Research">Medical Research</option>
                                <option value="Community Impact">Community Impact</option>
                                <option value="Donor Recognition">Donor Recognition</option>
                                <option value="News & Updates">News & Updates</option>
                            </select>
                            <span asp-validation-for="BlogPost.Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BlogPost.Content" class="form-label">Content <span class="text-danger">*</span></label>
                            <textarea asp-for="BlogPost.Content" class="form-control" rows="15" 
                                     placeholder="Write your blog post content here..."></textarea>
                            <span asp-validation-for="BlogPost.Content" class="text-danger"></span>
                            <div class="form-text">You can use basic HTML tags for formatting.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BlogPost.Summary" class="form-label">Summary</label>
                            <textarea asp-for="BlogPost.Summary" class="form-control" rows="3" 
                                     placeholder="Brief summary of the blog post (optional)"></textarea>
                            <span asp-validation-for="BlogPost.Summary" class="text-danger"></span>
                            <div class="form-text">This will be shown in blog listings and previews.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BlogPost.Tags" class="form-label">Tags</label>
                            <input asp-for="BlogPost.Tags" class="form-control" 
                                   placeholder="Enter tags separated by commas (e.g., health, donation, community)" />
                            <span asp-validation-for="BlogPost.Tags" class="text-danger"></span>
                            <div class="form-text">Use commas to separate multiple tags.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BlogPost.ImageUrl" class="form-label">Featured Image URL</label>
                            <input asp-for="BlogPost.ImageUrl" class="form-control" type="url"
                                   placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="BlogPost.ImageUrl" class="text-danger"></span>
                            <div class="form-text">Optional: URL of an image to display with the blog post.</div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="BlogPost.IsDocument" class="form-check-input" type="checkbox" />
                                <label asp-for="BlogPost.IsDocument" class="form-check-label">
                                    Mark as Document
                                </label>
                            </div>
                            <div class="form-text">Check if this post contains important documents or resources.</div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="BlogPost.IsPublished" class="form-check-input" type="checkbox" />
                                <label asp-for="BlogPost.IsPublished" class="form-check-label">
                                    Published
                                </label>
                            </div>
                            <div class="form-text">Uncheck to save as draft or hide from public view.</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/admin/blog" class="btn btn-secondary">
                                <i class="mdi mdi-arrow-left me-1"></i>Cancel
                            </a>
                            <div>
                                <button type="submit" name="action" value="draft" class="btn btn-outline-primary me-2">
                                    <i class="mdi mdi-content-save me-1"></i>Save as Draft
                                </button>
                                <button type="submit" name="action" value="publish" class="btn btn-primary">
                                    <i class="mdi mdi-publish me-1"></i>Update & Publish
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Post Information</h5>
                    @if (Model.BlogPost != null)
                    {
                        <div class="mb-3">
                            <label class="form-label">Created At</label>
                            <p class="text-muted">@Model.CreatedAt?.ToString("MMM dd, yyyy h:mm tt")</p>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Last Updated</label>
                            <p class="text-muted">@Model.UpdatedAt?.ToString("MMM dd, yyyy h:mm tt")</p>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Author</label>
                            <p class="text-muted">@Model.AuthorName</p>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <span class="badge @(Model.BlogPost.IsPublished == true ? "bg-success" : "bg-secondary")">
                                @(Model.BlogPost.IsPublished == true ? "Published" : "Draft")
                            </span>
                        </div>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Publishing Guidelines</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            Use clear, engaging titles
                        </li>
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            Write informative content
                        </li>
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            Choose appropriate categories
                        </li>
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            Add relevant tags for better discoverability
                        </li>
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            Include a compelling summary
                        </li>
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            Use high-quality featured images
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Actions</h5>
                    <div class="d-grid gap-2">
                        <a href="/blog/@Model.PostId" class="btn btn-outline-info btn-sm" target="_blank">
                            <i class="mdi mdi-eye me-1"></i>Preview Post
                        </a>
                        <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="mdi mdi-delete me-1"></i>Delete Post
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this blog post? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" class="d-inline">
                    <input type="hidden" asp-for="PostId" />
                    <button type="submit" name="action" value="delete" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
