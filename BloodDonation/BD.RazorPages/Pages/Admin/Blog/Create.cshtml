@page "/admin/blog/create"
@model BD.RazorPages.Pages.Admin.Blog.CreateModel
@{
    ViewData["Title"] = "Create Blog Post";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admin/blog">Blog Management</a></li>
                        <li class="breadcrumb-item active">Create Blog Post</li>
                    </ol>
                </div>
                <h4 class="page-title">Create New Blog Post</h4>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="BlogPost.Title" class="form-label">Title <span class="text-danger">*</span></label>
                            <input asp-for="BlogPost.Title" class="form-control" placeholder="Enter blog post title" />
                            <span asp-validation-for="BlogPost.Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BlogPost.Category" class="form-label">Category <span class="text-danger">*</span></label>
                            <select asp-for="BlogPost.Category" class="form-select">
                                <option value="">Select a category</option>
                                <option value="Health & Wellness">Health & Wellness</option>
                                <option value="Blood Donation Tips">Blood Donation Tips</option>
                                <option value="Success Stories">Success Stories</option>
                                <option value="Events & Campaigns">Events & Campaigns</option>
                                <option value="Medical Research">Medical Research</option>
                                <option value="Community Impact">Community Impact</option>
                                <option value="Donor Recognition">Donor Recognition</option>
                                <option value="News & Updates">News & Updates</option>
                            </select>
                            <span asp-validation-for="BlogPost.Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BlogPost.Content" class="form-label">Content <span class="text-danger">*</span></label>
                            <textarea asp-for="BlogPost.Content" class="form-control" rows="15" 
                                     placeholder="Write your blog post content here..."></textarea>
                            <span asp-validation-for="BlogPost.Content" class="text-danger"></span>
                            <div class="form-text">You can use basic HTML tags for formatting.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BlogPost.Summary" class="form-label">Summary</label>
                            <textarea asp-for="BlogPost.Summary" class="form-control" rows="3" 
                                     placeholder="Brief summary of the blog post (optional)"></textarea>
                            <span asp-validation-for="BlogPost.Summary" class="text-danger"></span>
                            <div class="form-text">This will be shown in blog listings and previews.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BlogPost.Tags" class="form-label">Tags</label>
                            <input asp-for="BlogPost.Tags" class="form-control" 
                                   placeholder="Enter tags separated by commas (e.g., health, donation, community)" />
                            <span asp-validation-for="BlogPost.Tags" class="text-danger"></span>
                            <div class="form-text">Use commas to separate multiple tags.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BlogPost.ImageUrl" class="form-label">Featured Image URL</label>
                            <input asp-for="BlogPost.ImageUrl" class="form-control" type="url"
                                   placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="BlogPost.ImageUrl" class="text-danger"></span>
                            <div class="form-text">Optional: URL of an image to display with the blog post.</div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="BlogPost.IsPublished" class="form-check-input" type="checkbox" />
                                <label asp-for="BlogPost.IsPublished" class="form-check-label">
                                    Publish immediately
                                </label>
                            </div>
                            <div class="form-text">If unchecked, the post will be saved as a draft.</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/admin/blog" class="btn btn-secondary">
                                <i class="mdi mdi-arrow-left me-1"></i>Cancel
                            </a>
                            <div>
                                <button type="submit" name="action" value="draft" class="btn btn-outline-primary me-2">
                                    <i class="mdi mdi-content-save me-1"></i>Save as Draft
                                </button>
                                <button type="submit" name="action" value="publish" class="btn btn-primary">
                                    <i class="mdi mdi-publish me-1"></i>Publish Post
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Publishing Guidelines</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            Use clear, engaging titles
                        </li>
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            Write informative content
                        </li>
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            Choose appropriate categories
                        </li>
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            Add relevant tags for better discoverability
                        </li>
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            Include a compelling summary
                        </li>
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            Use high-quality featured images
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Content Tips</h5>
                    <p class="text-muted">
                        Write content that educates, inspires, and engages the blood donation community. 
                        Focus on accurate information, personal stories, and actionable advice.
                    </p>
                    <p class="text-muted">
                        Remember that your content will be read by potential donors, medical professionals, 
                        and community members interested in supporting blood donation efforts.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
