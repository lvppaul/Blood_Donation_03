@page
@model LogoutModel
@{
    ViewData["Title"] = "Logout - BloodConnect";
}

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="min-h-screen bg-gradient-to-br from-red-50 via-white to-red-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full text-center">
        <div class="bg-white rounded-lg shadow-xl p-8">
            <div class="mb-6">
                <i class="fas fa-sign-out-alt text-6xl text-red-600 mb-4"></i>
                <h2 class="text-2xl font-bold text-gray-900">You've been logged out</h2>
                <p class="text-gray-600 mt-2">Thank you for using BloodConnect</p>
            </div>
            
            <div class="space-y-4">
                <a href="/login" 
                   class="w-full bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-4 rounded-lg transition-colors duration-200 inline-flex items-center justify-center">
                    <i class="fas fa-sign-in-alt mr-2"></i>
                    Sign In Again
                </a>
                
                <a href="/" 
                   class="w-full bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-3 px-4 rounded-lg transition-colors duration-200 inline-flex items-center justify-center">
                    <i class="fas fa-home mr-2"></i>
                    Go to Home
                </a>
            </div>
        </div>
    </div>
</div>
