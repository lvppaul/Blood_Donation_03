@{
    ViewData["Title"] = "Login";
}
<div class="container mx-auto px-4 py-12 flex justify-center items-center min-h-[calc(100vh-15rem)]">
    <div class="w-full max-w-md shadow-xl bg-white rounded-lg border border-gray-200 p-6">
        <div class="text-center">
            <h2 class="text-3xl font-bold! text-red-600 flex items-center justify-center gap-2">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                </svg>
                Login
            </h2>
            <p class="mt-2 text-sm text-gray-600">
                Access your BloodConnect account.
            </p>
        </div>
        <form method="post" asp-controller="" asp-action="Login">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="password" placeholder = "you@example.com", class = "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-red-500 focus:border-red-500 sm:text-sm" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Password</label>
                    <input type="password" placeholder="••••••••" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-red-500 focus:border-red-500 sm:text-sm" disabled />
                </div>

        <button type="submit" class="w-full mt-4 font-bold rounded-md bg-red-600 hover:bg-red-700 text-white text-xl py-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 @(ViewBag.IsLoading == true ? "opacity-50 cursor-not-allowed" : "")" @(ViewBag.IsLoading == true ? "disabled" : "")>
            @(ViewBag.IsLoading == true ? "Logging in..." : "Login")
        </button>
        </form>
    </div>
</div>