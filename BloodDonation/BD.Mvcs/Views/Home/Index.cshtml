@{
    ViewData["Title"] = "Home Page";
}
@* hero *@
<section class="relative py-20 md:py-32 bg-gradient-to-br from-primary/10 via-background to-background">
    <div class="absolute inset-0 opacity-50">
        <img src="/landing.png"
             alt="Blood donation background"
             style="object-fit: cover; opacity: 0.5; width: 100%; height: 100%; position: absolute; inset: 0;" />
    </div>
        <div class="container mx-auto px-4 relative z-10 text-center">
        <i class="fas fa-tint text-5xl text-red-700"></i>
                <h1 class="text-6xl! md:text-2xl text-red-700! font-bold text-primary mb-6">Connect. Donate. Save Lives.</h1>
                <p class="text-lg md:text-xl mb-10 max-w-3xl mx-auto">BloodConnect is a dedicated platform to bridge the gap between blood donors and those in urgent need. Join our community and make a difference.</p>
                <div class="space-x-0 space-y-4 md:space-y-0 md:space-x-4">
                    <button class="inline-flex border-1 bg-red-500 items-center justify-center gap-2 whitespace-nowrap font-medium text-white h-11 rounded-lg! hover:bg-red-300 px-8 py-6 text-lg" href="/register">Become a Donor</button>
                    <button class="inline-flex border-1 border-red-700! items-center justify-center gap-2 whitespace-nowrap text-red-700! font-medium h-11 rounded-lg! text-decoration-none hover:bg-red-300 px-10 py-6 text-lg" href="/search">Find Blood</button>
                </div>
        </div>
</section>

@* feature *@
@* How We Help Section *@
<section class="py-16 bg-red-200">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center text-red-700 mb-12">How We Help</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            <div class="rounded-lg border bg-white text-card-foreground text-center shadow-lg hover:shadow-xl transition-shadow duration-300">
                <div class="flex flex-col space-y-1.5 p-6">
                    <div class="mx-auto bg-red-700/10 p-3 rounded-full w-fit mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-users text-red-700">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                    </div>
                    <div class="font-semibold tracking-tight text-xl text-red-700">Donor Registration</div>
                </div>
                <div class="p-6 pt-0">
                    <p class="text-muted-foreground text-sm mb-4">Easily register as a blood donor and manage your availability.</p>
                    <a class="inline-flex items-center text-red-700! justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium text-decoration-none h-10 px-4 py-2 hover:underline!" asp-controller="Account" asp-action="Register">Register / Update Profile</a>
                </div>
            </div>
            <div class="rounded-lg border bg-white text-card-foreground text-center shadow-lg hover:shadow-xl transition-shadow duration-300">
                <div class="flex flex-col space-y-1.5 p-6">
                    <div class="mx-auto bg-red-700/10 p-3 rounded-full w-fit mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search text-red-700">
                            <circle cx="11" cy="11" r="8"></circle>
                            <path d="m21 21-4.3-4.3"></path>
                        </svg>
                    </div>
                    <div class="font-semibold tracking-tight text-xl text-red-700">Find Donors</div>
                </div>
                <div class="p-6 pt-0">
                    <p class="text-muted-foreground text-sm mb-4">Quickly search for available blood donors by type and location.</p>
                    <a class="inline-flex items-center text-red-700! justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium text-decoration-none h-10 px-4 py-2 hover:underline!" asp-controller="Donors" asp-action="Search">Search Donors</a>
                </div>
            </div>
            <div class="rounded-lg border bg-white text-card-foreground text-center shadow-lg hover:shadow-xl transition-shadow duration-300">
                <div class="flex flex-col space-y-1.5 p-6">
                    <div class="mx-auto bg-red-700/10 p-3 rounded-full w-fit mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar-days text-red-700">
                            <path d="M8 2v4"></path>
                            <path d="M16 2v4"></path>
                            <rect width="18" height="18" x="3" y="4" rx="2"></rect>
                            <path d="M3 10h18"></path>
                            <path d="M8 14h.01"></path>
                            <path d="M12 14h.01"></path>
                            <path d="M16 14h.01"></path>
                            <path d="M8 18h.01"></path>
                            <path d="M12 18h.01"></path>
                            <path d="M16 18h.01"></path>
                        </svg>
                    </div>
                    <div class="font-semibold tracking-tight text-xl text-red-700">Blood Drives</div>
                </div>
                <div class="p-6 pt-0">
                    <p class="text-muted-foreground text-sm mb-4">Stay updated on upcoming blood donation drives near you.</p>
                    <a class="inline-flex items-center text-red-700! justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium text-decoration-none h-10 px-4 py-2 hover:underline!" asp-controller="BloodDrives" asp-action="Index">View Schedule</a>
                </div>
            </div>
            <div class="rounded-lg border bg-white text-card-foreground text-center shadow-lg hover:shadow-xl transition-shadow duration-300">
                <div class="flex flex-col space-y-1.5 p-6">
                    <div class="mx-auto bg-red-700/10 p-3 rounded-full w-fit mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-droplet text-red-700">
                            <path d="M12 22a7 7 0 0 0 7-7c0-2-1-3.9-3-5.5s-3.5-4-4-6.5c-.5 2.5-2 4.9-4 6.5C6 11.1 5 13 5 15a7 7 0 0 0 7 7z"></path>
                        </svg>
                    </div>
                    <div class="font-semibold tracking-tight text-xl text-red-700">Emergency Requests</div>
                </div>
                <div class="p-6 pt-0">
                    <p class="text-muted-foreground text-sm mb-4">Post and view urgent requests for blood in critical situations.</p>
                    <a class="inline-flex items-center text-red-700! justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium text-decoration-none h-10 px-4 py-2 hover:underline!" asp-controller="Emergency" asp-action="Index">See Requests</a>
                </div>
            </div>
        </div>
    </div>
</section>

@* learn more section *@
<section class="py-16 bg-red-100">
    <div class="container mx-auto px-4">
        <div class="flex flex-col lg:flex-row items-center gap-12">
            <div class="lg:w-1/2">
                <img src="/doctor.jpg" alt="Doctor with patient" width="600" height="400" loading="lazy" decoding="async" class="w-full rounded-lg shadow-xl" />
            </div>
            <div class="lg:w-1/2">
                <h2 class="text-3xl font-bold text-red-700! mb-6">Your Donation Matters</h2>
                <p class="mb-4">Every pint of blood donated can save up to three lives. From accident victims to patients undergoing surgery or battling chronic illnesses, your contribution provides a lifeline.</p>
                <p class="mb-6">BloodConnect facilitates this life-saving process by ensuring that safe blood is available to those who need it, when they need it.</p>
                <button class="inline-flex border-1 items-center justify-center gap-2 whitespace-nowrap rounded-lg! text-sm font-medium text-decoration-none text-white! h-10 px-4 py-2 bg-red-700! hover:bg-red-500!" asp-controller="Blog" asp-action="Index">Learn More About Donation</button>
            </div>
        </div>
    </div>
</section>